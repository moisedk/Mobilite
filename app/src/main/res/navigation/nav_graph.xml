<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.moise.mobilite.ui.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.moise.mobilite.ui.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_registerNextFragment"
            app:destination="@id/registerNextFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.moise.mobilite.ui.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_mapsActivity"
            app:destination="@id/mapsActivity" />
    </fragment>
    <fragment
        android:id="@+id/registerNextFragment"
        android:name="com.moise.mobilite.ui.RegisterNextFragment"
        android:label="fragment_register_next"
        tools:layout="@layout/fragment_register_next" >
        <action
            android:id="@+id/action_registerNextFragment_to_otpFragment"
            app:destination="@id/otpFragment" />
    </fragment>
    <activity
        android:id="@+id/mapsActivity"
        android:name="com.moise.mobilite.ui.HomeMapsActivity"
        android:label="activity_maps"
        tools:layout="@layout/activity_home_maps" />
    <fragment
        android:id="@+id/otpFragment"
        android:name="com.moise.mobilite.ui.OtpFragment"
        android:label="fragment_otp"
        tools:layout="@layout/fragment_otp" >
        <action
            android:id="@+id/action_otpFragment_to_mapsActivity"
            app:destination="@id/mapsActivity" />
    </fragment>
</navigation>